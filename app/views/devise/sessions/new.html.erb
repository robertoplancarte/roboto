<div class="flex flex-col min-h-screen bg-grey-lighter">
  <div class="container max-w-sm px-2 mx-auto">
    <div class="w-full px-6 py-8 text-black bg-white rounded shadow-md">
      <h1 class="mb-8 text-3xl text-center">Log in</h1>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "Email", 
          class: "block w-full p-3 mb-4 border rounded border-grey-light"%>

        <%= f.password_field :password, 
          autocomplete: "current-password", 
          placeholder: "Password", 
          class: "block w-full p-3 mb-4 border rounded border-grey-light"%>


        <% if devise_mapping.rememberable? %>
          <div class="mb-2 field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
         
        <div class="w-full">
          <%= f.submit "Sign In", class: "py-3 my-1 text-center text-white bg-green-400 rounded w-full hover:bg-green-600 focus:outline-none" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-grey-dark">
      <%- if devise_mapping.recoverable? %>
        Forgot password?
        <%= link_to "Recover password", new_password_path(resource_name), class: 'no-underline border-b border-blue text-blue right' %>
      <% end -%>
    </div>

    <div class="mt-6 text-grey-dark">
      Don't have an account? 
      <%= link_to "Sign up", new_registration_path(resource_name), class: "no-underline border-b border-blue text-blue" %>
    </div>
  </div>
</div>
