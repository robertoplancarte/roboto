<!DOCTYPE html>
<html>
  <head>
    <title>Prometheus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="overflow-auto border-solid border-b-2 border-gray-600 shadow py-4 mb-10 bg-gray-600 text-white">
      <ul class="float-right flex space-x-10">
    <% if user_signed_in? %>
      <li>
        <%= current_user.email %>        
      </li>
      <li>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
      </li>
    <% else %>
      <li>
        <%= link_to('Login', new_user_session_path) %>  
      </li>
    <% end %>
      <ul>
    </nav>

    <%= yield %>

    <% if notice %>
      <div class="alert-toast fixed bottom-0 right-0 m-8 w-5/6 md:w-full max-w-sm">
        <input type="checkbox" class="hidden" id="footertoast">
        <label class="close cursor-pointer flex items-start justify-between w-full p-2 bg-green-500 h-10 rounded shadow-lg text-white" title="close" for="footertoast">
          <div>
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
          </div>
          <span class="float-right">X</span>
        </label>
      </div>
    <% end %>

  </body>
</html>
