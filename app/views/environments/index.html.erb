<div class="container max-w-5xl p-5 mx-auto bg-white shadow rounded-md">
  <h1 class="mb-8 text-3xl text-center">Environments</h1>

  <table class="w-full">
    <thead>
      <tr>
        <th>Name</th>
        <th>Private key path</th>
        <th>FQDN</th>
        <th>User name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @environments.each do |environment| %>
        <tr>
          <td><%= environment.name %></td>
          <td><%= environment.private_key_path %></td>
          <td><%= environment.fqdn %></td>
          <td><%= environment.user_name %></td>
          <td><%= link_to 'show', environment, class: "rounded px-2 text-gray-800 hover:bg-gray-400 cursor-pointer bg-gray-400"   %></td>
          <td><%= link_to 'edit', edit_environment_path(environment), class: "rounded px-2 text-gray-800 hover:bg-gray-400 cursor-pointer bg-gray-400"   %></td>
          <td><%= link_to 'destroy', environment, method: :delete, data: { confirm: 'Are you sure?' }, class: "rounded px-2 text-red-400 hover:bg-gray-400 cursor-pointer bg-gray-400"   %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="float-right mx-5 my-2 overflow-auto text-gray-600">
    <%= paginate @environments%>
  </div>

  <hr class="my-5">

  <%= link_to 'New Environment', new_environment_path, class: "px-4 py-3 text-center text-white bg-green-400 rounded w-full hover:bg-green-600" %>
</div>
