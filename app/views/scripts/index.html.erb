<div class="container max-w-5xl p-5 mx-auto bg-white shadow rounded-md">
  <h1 class="mb-8 text-3xl text-center">Scripts</h1>

  <table class="w-full">
    <thead>
      <tr>
        <th>Title</th>
        <th>Application</th>
        <th>Command</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @scripts.each do |script| %>
        <tr>
          <td><%= script.title %></td>
          <td><%= script.path_to_application.split('/').last %></td>
          <td><%= script.command.split('/').last  %></td>
          <td><%= script.aasm_state %></td>
          <td><%= link_to 'show', script, class: "rounded px-2 text-gray-800 bg-gray-400 hover:bg-gray-500 cursor-pointer text-center"  %></td>
          <td><%= link_to 'edit', edit_script_path(script), class: "rounded px-2 text-gray-800 bg-gray-400 hover:bg-gray-500 cursor-pointer text-center"  %></td>
          <td><%= link_to 'destroy', script, method: :delete, data: { confirm: 'Are you sure?' }, class: "rounded px-2 text-red-400 hover:bg-gray-400 cursor-pointer bg-gray-400"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="float-right mx-5 my-2 overflow-auto text-gray-600">
    <%= paginate @scripts%>
  </div>

  <hr class="my-5">

  <%= link_to 'New Script', new_script_path, class: "px-4 py-3 text-center text-white bg-green-400 rounded w-full hover:bg-green-600" %>
</div>
