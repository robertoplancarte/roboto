<div class="container max-w-5xl p-5 mx-auto bg-white shadow rounded-md">
  <h1 class="mb-8 text-3xl text-center">Scripts</h1>

  <table class="w-full">
    <thead>
      <tr>
        <th>Title</th>
        <th>Application</th>
        <th>Command</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @scripts.each do |script| %>
        <tr>
          <td><%= script.title %></td>
          <td><%= script.path_to_application.split('/').last %></td>
          <td><%= script.command.split('/').last  %></td>
          <td><%= script.aasm_state %></td>
          <td><%= link_to 'Show', script %></td>
          <td><%= link_to 'Edit', edit_script_path(script) %></td>
          <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr class="my-5">

  <%= link_to 'New Script', new_script_path, class: "px-4 py-3 text-center text-white bg-green-400 rounded w-full hover:bg-green-600" %>
</div>
